<html>
    <head>
        <!-- <link rel="stylesheet" href="/stylesheets/main.css"> -->
        
        <script src="jquery.js"></script>
        <link rel="stylesheet" href="/stylesheets/mainpage.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
        
    </head>
    <body>
        <nav class = "navbar navbar-expand-md navbar-dark bg-dark sticky-top">
            <div class = "container-fluid">
                <a class="navbar-brand" href="/"><img src = "/images/navbar-logo-micro.png"></a>
                
                <form class = "form-inline d-flex my-2 my-lg-0 justify-content-center md-form long-textbar" method="get" action="search">
                    <div class="lg-form my-0">
                        <input class="form-control form-control-md ml-3 long-textbar" type="text" placeholder ="search for websites..." aria-label="search">
                        <button href = "search" class="btn btn-outline-light btn-md my-0 ml-sm-2">SEARCH</button>
                    </div>
                </form>
                <!--
                <div class = "col-xl-2">
                        <select id = "topCateg">
                        <option>All Categories</option>
                        <option>Social Media</option>
                        <option>E-Commerce</option>
                        <option>News Sites</option>
                        <option>Blogs</option>
                        <option>Informational</option> 
                        <option>Entertainment</option> 
                        </select>
                </div> -->
                
                
                <ul class="navbar-nav">
                    <li class = "nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                           aria-expanded="false">
                            VIEW WEBSITES
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="social">Social Media</a>
                            <a class="dropdown-item" href="ecommerce">E-Commerce</a>
                            <a class="dropdown-item" href="news">News Sites</a>
                            <a class="dropdown-item" href="blogs">Blogs/Focus Sites</a>
                            <a class="dropdown-item" href="info">Informational</a>
                            <a class="dropdown-item" href="entertainment">Entertainment</a>
                        </div>
                    </li>
                    <li class = "nav-item">
                        <a class = "nav-link" href="submitsite">SUBMIT A WEBSITE</a>
                    </li>
                    <!-- rightoption1: either sign up or account, rightoption2: either log in or log out -->
                    <li class = "nav-item">
                        <a class = "nav-link" href="{{url1}}">{{rightoption1}}</a>
                    </li>
                    <li class = "nav-item">
                        <a class = "nav-link" href="{{url2}}">{{rightoption2}}</a>
                    </li>
                </ul>
            </div>
        </nav>
        
        <!--- image jumbotron? 
                put ratings here?-->
        <div class="row no-gutter">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="carousel inner">
                    <div class="carousel-item active">
                        <img src="/images/windows-background.jpg" class="img-responsive webheader-jumbotron-image">
                        <div class="carousel-caption">
                            
                        </div>
                    </div>
                </div>
            </div>    
        </div> 
        <!--- website summary container -->
        <div class="card px-3 pt-5 pb-3 shadow-sm websummary-container">
            <div class="row no-gutters">
                <div class="col-auto">
                    <img class="webheader-image" src="/images/logo-wikipedia.png">
                </div>   
                <div class="col">
                    <div class="card-block px-5">
                        <h1 class="card-title">{{websitename}}</h1>
                        <p class="card-text upperlabel">{{creator}}</p>
                        <p class="card-text web-introlabel"></p>
                        <div class="taglist">
                            {{#each tags}}
                            <span class="taglabels">{{tags}}</span>
                            {{/each}}
                        </div><br>
                        <div class="text-center">
                        <a href="{{websiteurl}}" class="btn btn-primary">VISITE SITE</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!--- description tab -->
        <div class="row web-desc pt-5">
            <div class = "col-lg-12 col-md-12 col-sm-12">
                <h1>Overview</h1>
            </div>
            <div class = "col-lg-12 col-md-12 col-sm-12">
                <p>{{websitedesc}}</p>
            </div>
        </div>
        <div class="row web-desc">
            <div class = "col-lg-12 col-md-12 col-sm-12">
                <h1>Feature List</h1>
            </div>
            <div class = "col-lg-12 col-md12 col-sm-12">
                <ul>
                    {{#each features}}
                    <li>{{features}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
        
        <hr style="width:80%;">
        <!--- image gallery tab -->
        <div class="row web-desc pt-5">
            <div class = "col-lg-12 col-md-12 col-sm-12">
                <h1>Image Gallery</h1>
            </div>
            <div class = "col-lg-12 col-md-12 col-sm-12 d-flex justify-content-center">
                <div id="web-image-gallery-carousel" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img src="/images/coffee-test1.jpg" class="d-block img-responsive center-block webdesc-gallery-image" alt="...">
                    </div>
                    <div class="carousel-item">
                      <img src="/images/coffee-test2.jpg" class="d-block img-responsive center-block webdesc-gallery-image" alt="...">
                    </div>
                    <div class="carousel-item">
                      <img src="/images/coffee-test3.jpg" class="d-block img-responsive center-block webdesc-gallery-image" alt="...">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#web-image-gallery-carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#web-image-gallery-carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
            </div>
        </div>
        
        <hr style="width:80%;">
        <!--- reviews -->
        <div class="row web-desc pt-5">
            <div class = "col-lg-12 col-md-12 col-sm-12">
                <h1>Reviews</h1>
            </div>
            <div class="card-group" style="display:flex;flex-direction:column;">
                <div class="card">
                    <div class="col-lg-12 col-md-12">
                        <div class="card-horizontal">
                            <div class="img-square-wrapper">
                                <img class="review-profile-pic" src="/images/logo-wikipedia.png" alt="Card image cap">
                                <p class="card-text">bobby</p>
                                <p class="card-text">sep 17, 2020</p>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">Card title</h4>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="col-lg-12 col-md-12">
                        <div class="card-horizontal">
                            <div class="img-square-wrapper">
                                <img class="review-profile-pic" src="/images/logo-wikipedia.png" alt="Card image cap">
                                <p class="card-text">bobby</p>
                                <p class="card-text">sep 17, 2020</p>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">Card title</h4>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
