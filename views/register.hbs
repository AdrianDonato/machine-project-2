<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
         <div class="container">
        <nav id = "topnav">
            <div class = "logo"></div>
            <a href="/" id="left-name">InSite</a>
            <input type ="text" name ="searchbar" placeholder="Search" id="searchbar">
            <select id = "topCateg">
                <option>All Categories</option>
                <option>Social Media</option>
                <option>E-Commerce</option>
                <option>News Sites</option>
                <option>Blogs</option>
                <option>Informational</option> 
                <option>Entertainment</option> 
            </select>
            <button type = "submit">Submit</button>
            
            <!-- rightoption1: either sign up or account, rightoption2: either log in or log out -->
            <a href={{url1}} style="float: right;">{{rightoption1}}</a>
            <a href={{url2}} style="float: right;">{{rightoption2}}</a>
            <a href="submitsite" style="float: right;">SUBMIT A WEBSITE</a>
        </nav>
        
         <nav id = "categories">
            <span><a href="social">Social Media</a></span>
            <span><a href="ecommerce">E-Commerce</a></span>
            <span><a href="news">News Sites</a></span>
            <span><a href="blogs">Blogs</a></span>
            <span><a href="info">Informational</a></span>
            <span><a href="entertainment">Entertainment</a></span>
        </nav>
        </div>

        <div class="content">
            <div class="registerbox">
                <h1 style="text-align: center;">Register</h1>
                {{#if error}}
                <div class="error">{{error}}</div>
                {{/if}}
                <form method="POST" action="register">
                <label for = "un">Username</label>
                    <input type = "text" placeholder="Enter Username" name ="un">
                <label for = "em">E-mail</label>
                    <input type = "email" placeholder="Enter E-mail" name ="em">
                <label for = "pw">Password</label>
                    <input type = "password" placeholder="Enter Password" name ="pw">
                <label for = "vpw">Verify Password</label>
                    <input type = "password" placeholder="Verify Password" name ="vpw">     
                <label for = "fname">First Name</label>
                    <input type = "text" placeholder="Enter First Name" name ="fname">
                <label for = "lname">Last Name</label>
                    <input type = "text" placeholder="Enter Last Name" name ="lname">
                <label for = "userImg">Profile Picture</label>
                    <input type = "file" name = "userImg" accept = "image/*">
                <input type="submit" value="Register"  id="subBtn">   
                </form>
            </div> 
        </div>   
    </body>
</html>
